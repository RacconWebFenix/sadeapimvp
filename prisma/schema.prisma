generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id                Int     @id @default(autoincrement())
  name              String
  email             String
  password          String
  role              String
  status            Boolean
  salt              String
  confirmationToken String
  recoverToken      String
  createdAt         DateTime
  updatedAt         DateTime
  
  @@map("users")
}
